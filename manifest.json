{
    "manifest_version": 3,
    "name": "Clara",
    "version": "1.0",
    "description": "Clara is an LLM-powered assistant helping visually impaired users to comprehend, interact, and navigate the web.",
    "permissions": [
        "tabs",
        "sidePanel",
        "pageCapture",
        "activeTab",
        "downloads",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "action": {
        "default_title": "Click to open panel of Clara."
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Period",
                "mac": "Command+Shift+Period"
            }
        }
    }
}